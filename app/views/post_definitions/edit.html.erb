<%= link_to 'Back', post_definitions_path, { class: 'btn btn-secondary', style: 'margin-bottom: 30px'} %>
<hr/>

<h3><%= @post.name %></h3>

<div class="row">
  <%= form_for :post, url: post_definition_path(@post), method: :patch do |f| %>
      <div class="col-md-9">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control"%>
      </div>

      <div class="col-md-3">
        <%= f.submit class: 'btn btn-secondary', style: 'margin-top: 30px;'%>
      </div>

  <% end %>
</div>

<div class="row" style="margin-top: 30px;">
  <div class="col-md-12">
    <h4>Fields</h4>
    <%= link_to 'Add Field', post_field_path(@post.id, field_name: nil, field_id: nil, type: 'new', post: @post.name), { class: 'btn btn-secondary', style: 'margin-bottom: 30px; margin-top: 15px'} %>
    <div class="card" style="border: none;">
      <ul class="list-group list-group-flush">
        <% @post_fields.each do |field| %>
            <li class="list-group-item col-md-12">

              <div class="col-md-3">
                <span>Name: <%= field.name %></span>
              </div>
              <div class="col-md-4">
                <span>Type: <%= field.field_type %></span>
              </div>

              <div class="col-md-5" style="display: inline-block;">
                <%= link_to "Edit", post_field_path(@post.id, field_name: field.name, field_id: field.id, type: field.field_type, post: @post.name),
                            class: 'btn btn-secondary btn-sm'%>
                <%= link_to "Delete", post_field_path(field),
                            method: :delete,
                            data: { confirm: 'Are you sure?' },
                            class: 'btn btn-secondary btn-sm'%>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
