<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box-header">
        <h3 class="box-title">
          New Post Definition
        </h3>
      </div>
      <div class="box-body">
        <%= form_for @post do |f| %>

            <div class="form-group">
              <%= f.label :name %><br>
              <%= f.text_field :name, class: "form-control"%>
            </div>

            <%= f.submit class: 'btn btn-primary' %>

        <% end %>

      </div>
    </div>
  </div>
</div>  


