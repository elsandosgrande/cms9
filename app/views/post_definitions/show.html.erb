<%= link_to 'Back', post_definitions_path, { class: 'btn btn-secondary', style: 'margin-bottom: 30px'} %>
<hr/>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Creation date:</strong>
  <%= @post.created_at %>
</p>
<p>
  <strong>Fields: </strong>{
  <% @all_post_fields.each do |field| %>
    <span><%= field.post_definition_id %></span>
    <span><%= field.name %></span>
    <span><%= field.field_type %></span>
  <% end %>
  }
</p>