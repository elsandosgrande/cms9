<div class="row">
  <div class="col-md-12">
    <div class="box box-info">

      <div class="box-header">
        <i class="fa fa-edit"></i>
        <h3 class="box-title"><%= @post_definition.name.pluralize %></h3>
        <div class="pull-right box-tools">
          <%= link_to 'Create', new_post_path(post_definition_id: @post_definition.id), class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
      <div class="box-body">
        <table class="table table-hover">
          <thead>
            <th>Name</th>
            <th style="width:160px;">Created</th>
            <th style="width:120px;">Last Update</th>
            <th style="width:120px;">Actions</th>
          </thead>
          <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= post.field('Title').value %></td>
                  <td><%= distance_of_time_in_words_to_now(post.created_at) %></td>
                  <td>User #<%= post.user_id %></td>
                  <td style="text-align: right;">
                    <%= link_to "Edit", edit_post_path(post),
                                  class: 'btn btn-primary btn-sm'%>
                    <%= link_to "Delete", post_path(post),
                                  method: :delete,
                                  data: { confirm: 'Are you sure?' },
                                  class: 'btn btn-danger btn-sm'%>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
