<%= field.label field.object.post_field.name, { style: 'margin-top: 20px;'} %>

<% if field.object.image_stored? %>
  <%= link_to "Remove", '#', {
      style: 'display: inline-block;',
      onclick: "deleteFile('edit');",
      id: 'remove-image' } %>
  <%= field.hidden_field :remove_image, { id: 'remove-value' } %>
  <%= field.file_field :image, { id: 'upload-image-field' } %>
  <%= image_tag field.object.image.thumb('250x').url, {
      class: 'post-image loaded',
        id: 'post-image' } %>
<% else %>
  <a href="#" onclick="deleteFile('new')" id="remove-image" style="display: none;">Remove</a>
  <%= field.file_field :image, {
    id: 'upload-image-field',
    required: field.object.post_field.required } %>
  <img id="post-image" class="post-image"/>
<% end %>
