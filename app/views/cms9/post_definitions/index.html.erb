<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box-header">
        <h3 class="box-title pull-right">
          <%= link_to 'New Post Definition', new_post_definition_path, { class: 'btn btn-primary btn-fill', style: 'float: right;'}%>
        </h3>
      </div>
      <div class="box-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th style="width:20px;">Count</th>
              <th style="width:120px;">Created</th>
              <th style="width:140px;">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.name %></td>
                <td><%= Cms9::Post.where(post_definition: post).count %></td>
                <td><%= distance_of_time_in_words_to_now(post.created_at) %></td>
                <td>
                  <%= link_to "Edit", edit_post_definition_path(post),
                                class: 'btn btn-primary btn-sm'%>
                  <%= link_to "Delete", post_definition_path(post),
                                method: :delete,
                                data: { confirm: 'Are you sure?' },
                                class: 'btn btn-danger btn-sm'%>
                </td>
              </tr>
            <% end %>
          </tbody>
          <%= paginate @posts %>
        </table>

      </div>
    </div>
  </div>
</div>  


